<div class="detail-con">
  <div class="title"><span><%= post.title %></span></div>
  <div class="auther-detail">
    <div class="auther-pic">
      <img src="/img/<%= post.author.avatar %>">
    </div>
    <div class="auther-name">
      <a class="auth-name" href="/person?author=<%= post.author._id %>"><h4><%= post.author.name %></h4></a>
      <span class="tag"> 发于 <%= post.created_at %> </span><span> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp浏览 <%= post.pv || 0 %> 次</span>

      <span class="tag-right">

    <% if (user && post.author._id && user._id.toString() === post.author._id.toString()) { %>
      <div class="ui inline dropdown">
        <div class="text"></div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item"><a href="/posts/<%= post._id %>/edit">编辑</a></div>
          <div class="item"><a href="/posts/<%= post._id %>/remove">删除</a></div>
          </div>
        </div>
      <% } %>

    </span>
    </div>
  </div>
  <div class="cont"><pre class="pret"><%- post.content %></pre></div>
</div>
