<div class="post-content">
  <div class="ui grid">

    <div class="sixteen wide column">
      <div class="ui segment">
        <h3><a href="/detail/<%= post._id %>"><%= post.title %></a></h3>
        <pre class="pree"><%- post.content %></pre>
        <div>
          <a class ="auth" href="/person?author=<%= post.author._id %>"><sapn><%= post.author.name %></span></a>
          <span class="tag"> 发表于 <%= post.created_at %></span>
          <span class="tag right">
            <span>浏览(<%= post.pv || 0 %>)</span>
            <span>留言(<%= post.commentsCount || 0 %>)</span>

            <% if (user && post.author._id && user._id.toString() === post.author._id.toString()) { %>
              <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/posts/<%= post._id %>/edit">编辑</a></div>
                  <div class="item"><a href="/posts/<%= post._id %>/remove">删除</a></div>
                </div>
              </div>
            <% } %>

          </span>
        </div>
      </div>
    </div>
  </div>
</div>
